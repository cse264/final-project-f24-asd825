<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Watchlist</title>
    <style>
        /* General Styles */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom right, #1e3a8a, #1e40af);
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            height: 100vh;
            overflow: hidden;
            position: relative;
        }

        /* Animated PNG Background */
        .background-png {
            position: absolute;
            top: 0;
            left: 0;
            width: 150%;
            height: 150%;
            background: url('/graphics/graphics0.png') no-repeat center center;
            background-size: cover;
            opacity: 0.2;
            animation: moveBackground 10s infinite alternate ease-in-out;
            z-index: 0;
        }

        @keyframes moveBackground {
            0% {
                transform: translate(-10%, -10%) rotate(0deg);
            }
            50% {
                transform: translate(10%, 10%) rotate(15deg);
            }
            100% {
                transform: translate(-10%, -10%) rotate(0deg);
            }
        }

        /* Floating Shapes */
        body::before {
            content: '';
            position: absolute;
            top: -50px;
            left: -50px;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            z-index: 1; /* Above PNG but below content */
            animation: float 6s ease-in-out infinite;
        }

        body::after {
            content: '';
            position: absolute;
            bottom: -80px;
            right: -80px;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            z-index: 1; /* Above PNG but below content */
            animation: float 8s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(20px);
            }
        }

        /* Header Styles */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            padding: 20px 40px;
            background-color: #0f172a;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
            z-index: 2;
        }

        header h1 {
            margin: 0;
            font-size: 24px;
        }

        header button {
            background-color: #4f46e5;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

        header button:hover {
            background-color: #4338ca;
        }

        /* Main Content */
        main {
            width: 80%;
            max-width: 1200px;
            margin: 20px auto;
            z-index: 2;
        }

        #watchlist-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .watchlist-item {
            background: #0f172a;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .watchlist-item img {
            border-radius: 10px;
            margin-bottom: 10px;
            width: 100%;
        }

        .watchlist-item p {
            margin: 10px 0;
            font-size: 16px;
        }

        .watchlist-item form {
            margin-top: 10px;
        }

        .watchlist-item button {
            background-color: #4f46e5;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

        .watchlist-item button:hover {
            background-color: #4338ca;
        }

        p {
            font-size: 16px;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Background Animated PNG -->
    <div class="background-png"></div>

    <!-- Header -->
    <header>
        <h1>Your Watchlist</h1>
        <button onclick="location.href='/'">Back to Homepage</button>
    </header>

    <!-- Main Content -->
    <main>
        <% if (watchlist.length > 0) { %>
            <div id="watchlist-container">
                <% watchlist.forEach(item => { %>
                    <div class="watchlist-item">
                        <!-- Movie Poster -->
                        <a href="/title/<%= item.tmdb_id %>">
                            <img src="https://image.tmdb.org/t/p/w200<%= item.poster_path %>" alt="<%= item.title %> Poster">
                        </a>
                        
                        <!-- Movie Title -->
                        <p><strong><%= item.title %></strong></p>

                        <!-- Update Rating -->
                        <form action="/watchlist/<%= item.tmdb_id %>" method="POST">
                            <label for="rating-<%= item.tmdb_id %>">Update Rating:</label>
                            <input type="number" id="rating-<%= item.tmdb_id %>" name="rating" min="1" max="10">
                            <button type="submit">Update</button>
                        </form>

                        <!-- Remove Movie -->
                        <form action="/watchlist/<%= item.tmdb_id %>" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                             <button type="submit">Remove</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p>Your watchlist is empty. Add some movies to get started!</p>
        <% } %>
    </main>
</body>
</html>
