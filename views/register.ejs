<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In/Sign Up</title>
    <style>
        /* General Styles */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom right, #1e3a8a, #1e40af);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            color: white;
            overflow: hidden;
            position: relative;
        }

        /* PNG Background Animation */
        .background-png {
            position: absolute;
            top: 0;
            left: 0;
            width: 150%;
            height: 150%;
            background: url('/graphics/graphics0.png') no-repeat center center;
            background-size: cover;
            opacity: 0.2;
            animation: moveBackground 10s infinite alternate ease-in-out;
            z-index: 0;
        }

        @keyframes moveBackground {
            0% {
                transform: translate(-10%, -10%) rotate(0deg);
            }
            50% {
                transform: translate(10%, 10%) rotate(15deg);
            }
            100% {
                transform: translate(-10%, -10%) rotate(0deg);
            }
        }

        /* Floating Shapes */
        body::before {
            content: '';
            position: absolute;
            top: -50px;
            left: -50px;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            z-index: 1; /* Above PNG but below auth container */
            animation: float 6s ease-in-out infinite;
        }

        body::after {
            content: '';
            position: absolute;
            bottom: -80px;
            right: -80px;
            width: 400px;
            height: 400px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            z-index: 1; /* Above PNG but below auth container */
            animation: float 8s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(20px);
            }
        }

        /* Authentication Container */
        #auth-container {
            background-color: #0f172a;
            border-radius: 10px;
            padding: 20px 40px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            width: 350px;
            position: relative;
            z-index: 2; /* Above all background elements */
        }

        #tabs {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        #tabs button {
            background: transparent;
            color: #a5b4fc;
            border: none;
            font-size: 14px;
            cursor: pointer;
            padding: 10px;
        }

        #tabs button:hover,
        #tabs button:focus {
            color: #ffffff;
            text-decoration: underline;
        }

        form {
            display: none;
            text-align: center;
        }

        form h2 {
            margin-bottom: 20px;
            font-size: 24px;
        }

        form label {
            display: block;
            margin: 10px 0 5px;
        }

        form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-radius: 5px;
        }

        form button {
            background-color: #4f46e5;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

        form button:hover {
            background-color: #4338ca;
        }

        /* Styling for Icon */
        .icon {
            text-align: center;
            margin-bottom: 20px;
        }

        .icon img {
            width: 200px;
            height: auto;
        }

        /* Admin button */
        #tabs button#adminTab:hover {
            color: #22c55e;
        }
    </style>
</head>
<body>
    <!-- Background Animated PNG -->
    <div class="background-png"></div>

    <div id="auth-container">
        <div class="icon">
            <img src="/images/file.png" alt="Logo">
        </div>

        <!-- Tabs for Sign In/Sign Up -->
        <div id="tabs">
            <button id="signInTab" onclick="showForm('signin')">Sign In</button>
            <button id="signUpTab" onclick="showForm('signup')">Sign Up</button>
            <button id="adminTab" onclick="location.href='/register/admin'">Admin Sign In</button>
        </div>

        <!-- Sign In Form -->
        <form id="signinForm" action="/register/signin" method="POST">
            <h2>Sign In</h2>
            <label for="email">Email:</label>
            <input type="email" id="email" name="username" placeholder="Enter your email" required>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
            
            <button type="submit">Sign In</button>
        </form>

        <!-- Sign Up Form -->
        <form id="signupForm" action="/register/signup" method="POST">
            <h2>Sign Up</h2>
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" placeholder="First Name" required>
            
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" placeholder="Last Name" required>
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="username" placeholder="Email Address" required>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Password" required>
            
            <button type="submit">Sign Up</button>
        </form>
    </div>

    <script>
        // JavaScript to toggle between forms
        function showForm(formType) {
            document.getElementById('signinForm').style.display = formType === 'signin' ? 'block' : 'none';
            document.getElementById('signupForm').style.display = formType === 'signup' ? 'block' : 'none';
        }

        // Default to showing the Sign In form
        showForm('signin');
    </script>
</body>
</html>
